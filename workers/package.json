        "db:reset": "./scripts/db-reset.sh --force"
    },
    "dependencies": {
        "hono": "^4.6.0",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250124.0",
        "@eslint/js": "^9.17.0",
        "@types/node": "^22.10.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.2",
        "wrangler": "^4.0.0"
    }
}