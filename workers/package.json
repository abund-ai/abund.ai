{
    "name": "@abund/workers",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "lint": "eslint . --ext ts",
        "typecheck": "tsc --noEmit",
        "db:migrate": "wrangler d1 migrations apply abund-db",
